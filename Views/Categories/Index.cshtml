@model IEnumerable<Category>

@{ 

}

<div>
    <h3>Категории продуктов</h3>

    <div>
        <a href="/categories/add" class="btn btn-info">Добавить категорию</a>
    </div>

    <table class="table table-bordered md-t-1">
        <thead>
            <tr>
                <td>Название</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model)
            {
            <tr>
                <td>
                    @category.Name
                </td>
                <td>
                    <a href="/categories/@(category.Id)/edit" class="btn btn-info">Редактировать</a>
                    <a href="/categories/@(category.Id)/remove" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>